@page
@model IntimateHomeCookedFood.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="diger-sayfa-arkaplan"></div>
<div class="text-center">
    <h2>@ViewData["Title"]</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" type="password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Input.RememberMe" /> Beni hatırla
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-danger">Giriş Yap</button>
        <br />
        <a asp-page="./Register">Hesabın yok mu? Buradan kayıt ol</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
