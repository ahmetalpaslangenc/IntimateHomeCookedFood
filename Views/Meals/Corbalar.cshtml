<div class="row">
    @foreach (var meal in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <div class="card-body">
                    <h4 class="card-title">@meal.Name</h4>
                    <p class="card-text">@meal.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="@Url.Action("Details", "Mothers", new { id = meal.Id, mealId = meal.Id })" class="btn btn-sm btn-outline-secondary">View</a>
                        </div>
                        <small class="text-muted">@meal.Price</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
