@model IntimateHomeCookedFood.Models.MotherDetailViewModel

<div class="diger-sayfa-arkaplan"></div>
<div class="card p-4">
    <h2>@Model.Name</h2>
    <p>Değerlendirme: @Model.Rating</p>

    <h4>Günün Menüsü</h4>
    <ul>
        @foreach (var item in Model.Menu)
        {
            <li>
                <strong>@item.Category</strong>: @item.Name (@item.Price.ToString("0.00") TL)
            </li>
        }
    </ul>

    <form method="post" asp-action="AddMenuToCart" asp-controller="Cart">
        @foreach (var item in Model.Menu)
        {
            <input type="hidden" name="items" value="@($"{item.Id}|{item.Name}|{item.Price}")" />
        }
        <button type="submit" class="btn btn-danger">Sepete Ekle</button>
        <a href="/Mothers" class="btn btn-outline-secondary">Geri Dön</a>
    </form>
</div>
